#!/usr/bin/env bash
export OS_USERNAME=admin
export OS_PASSWORD={{ADMIN_PASS}}
export OS_TENANT_NAME=admin
export OS_AUTH_URL=http://controller:35357/v2.0

mkdir /tmp/images
cd /tmp/images/
wget http://download.cirros-cloud.net/0.3.2/cirros-0.3.2-x86_64-disk.img
glance image-create --name=cirros032 --disk-format=qcow2 \
  --container-format=bare --visibility=public < cirros-0.3.2-x86_64-disk.img
glance image-list
rm -r /tmp/images

